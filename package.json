{
  "name": "winmoji",
  "productName": "winMoji",
  "version": "1.0.0",
  "description": "Emoji Search for Windows",
  "main": "main.js",
  "author": "ryanSn <chatters@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "standard",
    "test": "standard && jest",
    "start": "yarn compile && electron main.js",
    "compile": "./node_modules/.bin/webpack",
    "dev": "yarn webpack-dev-server -g --progress --colors",
    "pack": "yarn compile && build --dir",
    "release": "yarn compile && build --win --ia32"
  },
  "dependencies": {
    "electron-localshortcut": "^1.1.1",
    "emojilib": "^2.2.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "electron": "^1.6.2",
    "electron-builder": "^16.6.1",
    "electron-builder-squirrel-windows": "^16.6.0",
    "jest": "^19.0.2",
    "pre-commit": "^1.2.2",
    "standard": "^9.0.2",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2"
  },
  "pre-commit": [
    "lint"
  ],
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "build": {
    "appId": "com.rchatters.winmoji",
    "copyright": "Copyright (c) 2017 rchatters",
    "productName": "winMoji",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "directories": {
      "buildResources": "assets/icons/win"
    }
  },
  "engines": {
    "node": ">= 7.4.0"
  }
}
